@page
@model MagazinAranjamenteFlorale.Pages.Offers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index <a class="create-customer" asp-page="Create">Create New</a></h1>


<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].EndDate)
            </th>
            <th>Product</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
            foreach (var item in Model.Offer)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @item.Product.Name
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
