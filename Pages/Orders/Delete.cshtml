@page
@model MagazinAranjamenteFlorale.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerName)
        </dd>
        
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-12">
            Products
        </dt>
    </dl>
    <hr />

    <div class="row">
        <div class="col-6">
            <table class="w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach (var product in Model.Order.OrderProducts) {
                            @:<tr>
                                <td>
                                    @product.Product.Name
                                </td>

                                <td>
                                    @product.Product.Price
                                </td>
                            @:</tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="row mt-3">
        <form method="post">
            <input type="hidden" asp-for="Order.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>
