@page
@model MagazinAranjamenteFlorale.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete <strong>Are you sure you want to delete this?</strong><small>order</small></h1>


<div>
    <hr />
    <dl class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-12">

            <div class="row">
                <div class="col-6">@Html.DisplayNameFor(model => model.Order.Customer.CustomerName)</div>
                <div class="col-6">@Html.DisplayFor(model => model.Order.Customer.CustomerName)</div>
            </div>
            <hr />

            <div class="row">
                <div class="col-6">@Html.DisplayNameFor(model => model.Order.OrderDate)</div>
                <div class="col-6">@Html.DisplayFor(model => model.Order.OrderDate)</div>
            </div>
            <hr />

            <div class="row">
                <div class="col-12">Products:</div>
               
            </div>

            

            <div class="row">
                <table class="w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach (var product in Model.Order.OrderProducts) {
                            @:<tr>
                                <td>
                                    @product.Product.Name
                                </td>

                                <td>
                                    @product.Product.Price
                                </td>
                            @:</tr>
                        }
                    }
                </tbody>
            </table>
            </div>

        </div>
    
    </dl>

    
    <hr />

    
    
    <div class="row mt-3">
        <form method="post">
            <input type="hidden" asp-for="Order.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>
