@page
@model MagazinAranjamenteFlorale.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerName)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-12">
            Products
        </dt>
    </dl>
    <hr />

    <div class="row">
        <div class="col-6">
            <table class="w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach (var product in Model.Order.OrderProducts) {
                            @:<tr>
                                <td>
                                    @product.Product.Name
                                </td>

                                <td>
                                    @product.Product.Price
                                </td>
                            @:</tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Order?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
